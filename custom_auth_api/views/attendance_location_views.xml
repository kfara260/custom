<odoo>
    <record id="view_form_attendance_location" model="ir.ui.view">
        <field name="name">attendance.location.form</field>
        <field name="model">attendance.location</field>
        <field name="arch" type="xml">
            <form string="Attendance Location">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="latitude"/>
                        <field name="longitude"/>
                        <field name="accepted_radius"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_attendance_location" model="ir.actions.act_window">
        <field name="name">Attendance Locations</field>
        <field name="res_model">attendance.location</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Device Information -->
    <menuitem name="Attendance Location" id="attendance_location_menu"
        parent="hr_attendance.menu_hr_attendance_settings" action="action_attendance_location"
        sequence="1" /> 

    <!-- <menuitem id="attendance_location_menu" name="Attendance Location" action="action_attendance_location"/> -->

</odoo>
